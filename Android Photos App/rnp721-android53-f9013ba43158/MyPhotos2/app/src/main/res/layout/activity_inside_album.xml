<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsideAlbum">


    <ListView
        android:id="@+id/photoList"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:listSelector="?attr/colorControlActivated">

    </ListView>

    <Button
        android:id="@+id/addPhotoButton"
        android:layout_width="166dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="111dp"
        android:text="New Photo" />

    <Spinner
        android:id="@+id/movePhoto"
        android:layout_width="182dp"
        android:layout_height="63dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@id/photoList"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="-150dp"
        android:layout_marginBottom="-113dp"
        android:minHeight="32dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/addPhotoButton"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="-111dp"
        android:text="Back" />


</RelativeLayout>